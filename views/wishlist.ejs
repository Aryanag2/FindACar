<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Wishlist</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Your Wishlist</h1>
        <!-- Form to add new wishlist item -->
        <form action="/create-wishlist" method="post">
            <div class="form-group">
                <label for="BrandName">Brand Name:</label>
                <input type="text" id="BrandName" name="BrandName" required>
            </div>
            <div class="form-group">
                <label for="Model">Model:</label>
                <input type="text" id="Model" name="Model" required>
            </div>
            <div class="form-group">
                <label for="Year">Year:</label>
                <input type="number" id="Year" name="Year" required min="1900" max="2099">
            </div>
            <button type="submit" class="btn btn-primary">Add to Wishlist</button>
        </form>

        <!-- Displaying existing wishlist items -->
        <% if (items && items.length > 0) { %>
            <ul>
                <% items.forEach(function(item) { %>
                    <li><%= item.BrandName %> <%= item.Model %> (<%= item.Year %>)</li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No items in your wishlist.</p>
        <% } %>
    </div>
    <script src="/js/scripts.js"></script>
</body>
</html>
